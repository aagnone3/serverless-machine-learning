{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "https://foo.com",
    "lib": [
      "es2017"
    ],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // "strict": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es2017",
    "rootDir": "./",
    "outDir": "lib"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "test",
    "webpack.config.js"
  ]
}
